<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.pembrokemayball.pembrokebiennale.Map"
    tools:showIn="@layout/app_bar_map">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="uk.co.pembrokemayball.pembrokebiennale.Map">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/clickonmap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="Click on the map to find out more about the inspiration  behind each space."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clickonmap"
                app:srcCompat="@drawable/mainmap" />

            <TextView
                android:id="@+id/list1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="1 Old Court \n2 Old Library\n3 Hall\n4 Ivy Court\n5 Ivy Parlours\n6 The Orchard\n7 Graduate Parlour\n8 Junior Parlour\n9 New Court"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/list2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="10 Main Stage\n11 Bowling Green\n12 Fellow’s Carpark\n13 Foundress Lawn\n14 Master’s Garden\n15 Fellows’ Garden\n16 Library Lawn\n17 Red Buildings Lawn\n18 Wren Chapel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/foundlawn"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openFoundLawn"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.35000002" />

            <Button
                android:id="@+id/fellowgard"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:background="@null"
                android:onClick="openFellowGard"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.34"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.31" />

            <Button
                android:id="@+id/newcourt"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:onClick="openNewCourt"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.29"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.85" />

            <Button
                android:id="@+id/orch"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openOrch"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintLeft_toLeftOf="@+id/map"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clickonmap"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintVertical_bias="0.53" />

            <Button
                android:id="@+id/redbuild"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openRed"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.76"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.100000024" />

            <Button
                android:id="@+id/oldcourt"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openOldCourt"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.87"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.369" />

            <Button
                android:id="@+id/ivycourt"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openIvyCourt"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.71"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.53999996" />

            <Button
                android:id="@+id/wrensChapel"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openWren"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.24000001" />

            <Button
                android:id="@+id/oldlib"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openOldLib"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.46" />

            <Button
                android:id="@+id/ivyparl"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openIvyParl"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.421" />

            <Button
                android:id="@+id/mastgard"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:onClick="openMastGard"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/map"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/map"
                app:layout_constraintVertical_bias="0.23000002" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>